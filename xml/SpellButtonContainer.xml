<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Definition SYSTEM "../dtd/ui.dtd">
<Definition usePropertiesCache="false">
	<Constants>
		<Constant name="assets" value="[config.ui.skin]assets.swf|" />
		<Constant name="css" value="[config.ui.skin]css/" />
		
		<Constant name="frame_offset_horizontal" value="6" type="int" />
		<Constant name="frame_offset_vertical" value="14" type="int" />
		
		<Constant name="bg_margin_right" value="57" type="int" />
		<Constant name="bg_margin_left" value="20" type="int" />
		<Constant name="bg_margin_left_to_arrow" value="16" type="int" />
		
		<Constant name="frame_char_width" value="59" type="int" />
		<Constant name="frame_char_height" value="64" type="int" />
		<Constant name="frame_summon_width" value="47" type="int" />
		<Constant name="frame_summon_height" value="51" type="int" />
		
		<Constant name="first_frame_x" value="-50" type="int" />
		<Constant name="first_frame_y" value="-35" type="int" />
		
		<Constant name="mask_width" value="47" type="int" />
		<Constant name="mask_height" value="56" type="int" />
		<Constant name="mask_x" value="3" type="int" />
		<Constant name="mask_y" value="4" type="int" />
		<Constant name="mask_corner" value="6" type="int" />
		
		<Constant name="pdv_width" value="5" type="int" />
		<Constant name="pdv_height" value="56" type="int" />
		<Constant name="pdv_x" value="51" type="int" />
		<Constant name="pdv_y" value="4" type="int" />		
		<Constant name="pdv_summon_x" value="41" type="int" />
		<Constant name="pdv_summon_y" value="3" type="int" />	
		<Constant name="shield_x" value="45" type="int" />
		<Constant name="shield_y" value="4" type="int" />		
		<Constant name="shield_summon_x" value="36" type="int" />
		<Constant name="shield_summon_y" value="3" type="int" />		
		
		<Constant name="current_frame_border_width" value="6" type="int" />
		<Constant name="char_ctr_offset" value="-8" type="int" />
		
		<Constant name="dead_frame_normal_alpha" value="0.3" type="number" />
		<Constant name="dead_frame_over_alpha" value="0.8" type="number" />
		
		<Constant name="texture_time" value="[local.assets]TimeLine_jauge_time" />
		<Constant name="texture_frame" value="[local.assets]Effets_tx_SlotTimeLineBleu" />
		<Constant name="texture_pdv_challenger" value="[local.assets]TimeLine_jauge_pdv_rouge" />
		<Constant name="texture_pdv_defender" value="[local.assets]TimeLine_jauge_pdv_bleu" />
		<Constant name="texture_shieldPoints" value="[local.assets]Timeline_jauge_shieldPoints" />
	</Constants>


	<Container name="ctr_main">
		<Anchors>
			<Anchor relativePoint="BOTTOMRIGHT" point="BOTTOMRIGHT">
				<AbsDimension x="0" y="-305" />
			</Anchor>
		</Anchors>
		<mouseEnabled>true</mouseEnabled>
		
		<Container name="ctr_concealable">
			<Anchors>
				<Anchor relativePoint="BOTTOMRIGHT" point="BOTTOMRIGHT">
					<AbsDimension x="0" y="-15" />
				</Anchor>
			</Anchors>
			
			<Texture name="tx_background">
				<Size>
					<AbsDimension x="60" y="62" />
				</Size>
				<autoGrid>true</autoGrid>
				<uri>[local.assets]TimeLine_tx_background</uri>
			</Texture>
			
			<Label name="lbl_turn">
				<Anchors>
					<Anchor relativePoint="BOTTOMRIGHT" point="BOTTOMRIGHT">
						<AbsDimension x="-24" y="-24" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="30" y="20" />
				</Size>
				<css>[local.css]normal.css</css>
				<cssClass>center</cssClass>
			</Label>
			
			<Button name="btn_previousTurn">
				<Common>
					<Anchors>
						<Anchor relativePoint="BOTTOMRIGHT" point="BOTTOMRIGHT">
							<AbsDimension x="-27" y="-45" />
						</Anchor>
					</Anchors>

					<!-- Texture btn_rightArrow_tx-->
					<Texture name="btn_previousTurn_tx">
						<Size>
							<AbsDimension x="10" y="18" />
						</Size>
						<uri>[local.assets]TimeLine_btn_PetiteFleche_droite</uri>
						<rotation>-90</rotation>
					</Texture>
					<Hooks>
						<onRelease />
					</Hooks>
				</Common>
				<State type="OVER">
					<SetProperties target="btn_rightArrow_tx">
						<gotoAndStop>over</gotoAndStop>
					</SetProperties>
				</State>
				<State type="PRESSED">
					<SetProperties target="btn_rightArrow_tx">
						<gotoAndStop>pressed</gotoAndStop>
					</SetProperties>
				</State>
			</Button>

			<!-- Button btn_leftArrow-->

			<Button name="btn_nextTurn">
				<Common>
					<Anchors>
						<Anchor relativePoint="BOTTOMRIGHT" point="BOTTOMRIGHT">
							<AbsDimension x="-27" y="-5" />
						</Anchor>
					</Anchors>

					<!-- Texture btn_leftArrow_tx-->
					<Texture name="btn_nextTurn_tx">
						<Size>
							<AbsDimension x="10" y="18" />
						</Size>
						<uri>[local.assets]TimeLine_btn_PetiteFleche_gauche</uri>
						<rotation>-90</rotation>
					</Texture>
					<Hooks>
						<onRelease />
					</Hooks>
				</Common>
				<State type="OVER">
					<SetProperties target="btn_leftArrow_tx">
						<gotoAndStop>over</gotoAndStop>
					</SetProperties>
				</State>
				<State type="PRESSED">
					<SetProperties target="btn_leftArrow_tx">
						<gotoAndStop>pressed</gotoAndStop>
					</SetProperties>
				</State>
			</Button>
		</Container>
		
		<Button name="btn_minimize">
			<Common>
				<Anchors>
					<Anchor relativePoint="BOTTOMRIGHT" point="BOTTOMRIGHT">
						<AbsDimension x="0" y="-5" />
					</Anchor>
				</Anchors>
				<checkBox>true</checkBox>

				<Texture name="btn_minimize_tx">
					<Size>
						<AbsDimension x="17" y="82" />
					</Size>
					<uri>[local.assets]TimeLine_btn_afficherTimeLine</uri>
				</Texture>
			</Common>
			
			<State type="OVER">
				<SetProperties target="btn_minimize_tx">
					<gotoAndStop>over</gotoAndStop>
				</SetProperties>
			</State>
			<State type="PRESSED">
				<SetProperties target="btn_minimize_tx">
					<gotoAndStop>pressed</gotoAndStop>
				</SetProperties>
			</State>
			<State type="SELECTED">
				<SetProperties target="btn_minimize_tx">
					<gotoAndStop>selected</gotoAndStop>
				</SetProperties>
			</State>
			<State type="SELECTED_OVER">
				<SetProperties target="btn_minimize_tx">
					<gotoAndStop>selected_over</gotoAndStop>
				</SetProperties>
			</State>
			<State type="SELECTED_PRESSED">
				<SetProperties target="btn_minimize_tx">
					<gotoAndStop>selected_pressed</gotoAndStop>
				</SetProperties>
			</State>
		</Button>
	</Container>
</Definition>