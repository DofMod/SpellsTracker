<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Definition SYSTEM "../dtd/ui.dtd">
<Definition usePropertiesCache="false">
	<Constants>
		<Constant name="assets" value="[config.ui.skin]assets.swf|" />
		<Constant name="css" value="[config.ui.skin]css/" />
		
		<Constant name="spellButtonWidth" value="44" type="int" />
		<Constant name="spellButtonHeight" value="44" type="int" />
		<Constant name="spellButtonX" value="-44" type="int" />
		<Constant name="spellButtonY" value="9" type="int" />
		<Constant name="spaceBetweenSpellButton" value="53" type="int" /> <!-- spellButtonWidth + spellButtonY -->
		<Constant name="backgroundWidth" value="61" type="int" /> <!-- spellButtonWidth + 17 -->
		<Constant name="backgroundHeight" value="62" type="int" />
		<Constant name="backgroundX" value="0" type="int" />
		<Constant name="backgroundY" value="0" type="int" />
	</Constants>


	<Container name="ctr_main">
		<Anchors>
			<Anchor relativePoint="BOTTOMRIGHT" point="BOTTOMRIGHT">
				<AbsDimension x="0" y="-310" />
			</Anchor>
		</Anchors>
		<mouseEnabled>true</mouseEnabled>
		
		<Container name="ctr_concealable">
			<Anchors>
				<Anchor relativePoint="BOTTOMRIGHT" point="BOTTOMRIGHT">
					<AbsDimension x="0" y="-10" />
				</Anchor>
			</Anchors>
			
			<Texture name="tx_background">
				<Size>
					<AbsDimension x="61" y="62" />
				</Size>
				<autoGrid>true</autoGrid>
				<uri>[local.assets]TimeLine_tx_background</uri>
			</Texture>
			
			<Label name="lbl_turn">
				<Anchors>
					<Anchor relativePoint="BOTTOMRIGHT" point="BOTTOMRIGHT">
						<AbsDimension x="-24" y="-30" />
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="30" y="20" />
				</Size>
				<css>[local.css]normal.css</css>
				<cssClass>center</cssClass>
			</Label>
			
			<Button name="btn_previousTurn">
				<Common>
					<Anchors>
						<Anchor relativePoint="BOTTOMRIGHT" point="BOTTOMRIGHT">
							<AbsDimension x="-27" y="-48" />
						</Anchor>
					</Anchors>

					<Texture name="btn_previousTurn_tx">
						<Size>
							<AbsDimension x="10" y="18" />
						</Size>
						<uri>[local.assets]TimeLine_btn_PetiteFleche_droite</uri>
						<rotation>-90</rotation>
					</Texture>
					<Hooks>
						<onRelease />
					</Hooks>
				</Common>
				<State type="OVER">
					<SetProperties target="btn_previousTurn_tx">
						<gotoAndStop>over</gotoAndStop>
					</SetProperties>
				</State>
				<State type="PRESSED">
					<SetProperties target="btn_previousTurn_tx">
						<gotoAndStop>pressed</gotoAndStop>
					</SetProperties>
				</State>
			</Button>

			<Button name="btn_nextTurn">
				<Common>
					<Anchors>
						<Anchor relativePoint="BOTTOMRIGHT" point="BOTTOMRIGHT">
							<AbsDimension x="-27" y="-16" />
						</Anchor>
					</Anchors>

					<Texture name="btn_nextTurn_tx">
						<Size>
							<AbsDimension x="10" y="18" />
						</Size>
						<uri>[local.assets]TimeLine_btn_PetiteFleche_gauche</uri>
						<rotation>-90</rotation>
					</Texture>
					<Hooks>
						<onRelease />
					</Hooks>
				</Common>
				<State type="OVER">
					<SetProperties target="btn_nextTurn_tx">
						<gotoAndStop>over</gotoAndStop>
					</SetProperties>
				</State>
				<State type="PRESSED">
					<SetProperties target="btn_nextTurn_tx">
						<gotoAndStop>pressed</gotoAndStop>
					</SetProperties>
				</State>
			</Button>

			<Button name="btn_lastTurn">
				<Common>
					<Anchors>
						<Anchor relativePoint="BOTTOMRIGHT" point="BOTTOMRIGHT">
							<AbsDimension x="-27" y="-3" />
						</Anchor>
					</Anchors>

					<Texture name="btn_lastTurn_tx">
						<Size>
							<AbsDimension x="10" y="18" />
						</Size>
						<uri>[local.assets]TimeLine_btn_PetiteFleche_gauche</uri>
						<rotation>-90</rotation>
					</Texture>
					<Hooks>
						<onRelease />
					</Hooks>
				</Common>
				<State type="OVER">
					<SetProperties target="btn_lastTurn_tx">
						<gotoAndStop>over</gotoAndStop>
					</SetProperties>
				</State>
				<State type="PRESSED">
					<SetProperties target="btn_lastTurn_tx">
						<gotoAndStop>pressed</gotoAndStop>
					</SetProperties>
				</State>
			</Button>
		</Container>
		
		<Button name="btn_minimize">
			<Common>
				<Anchors>
					<Anchor relativePoint="BOTTOMRIGHT" point="BOTTOMRIGHT">
						<AbsDimension x="0" y="0" />
					</Anchor>
				</Anchors>
				<checkBox>true</checkBox>

				<Texture name="btn_minimize_tx">
					<Size>
						<AbsDimension x="17" y="82" />
					</Size>
					<uri>[local.assets]TimeLine_btn_afficherTimeLine</uri>
				</Texture>
			</Common>
			
			<State type="OVER">
				<SetProperties target="btn_minimize_tx">
					<gotoAndStop>over</gotoAndStop>
				</SetProperties>
			</State>
			<State type="PRESSED">
				<SetProperties target="btn_minimize_tx">
					<gotoAndStop>pressed</gotoAndStop>
				</SetProperties>
			</State>
			<State type="SELECTED">
				<SetProperties target="btn_minimize_tx">
					<gotoAndStop>selected</gotoAndStop>
				</SetProperties>
			</State>
			<State type="SELECTED_OVER">
				<SetProperties target="btn_minimize_tx">
					<gotoAndStop>selected_over</gotoAndStop>
				</SetProperties>
			</State>
			<State type="SELECTED_PRESSED">
				<SetProperties target="btn_minimize_tx">
					<gotoAndStop>selected_pressed</gotoAndStop>
				</SetProperties>
			</State>
		</Button>
	</Container>
</Definition>