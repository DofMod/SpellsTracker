<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Definition SYSTEM "../dtd/ui.dtd">
<Definition>
	<Constants>
		<Constant name="assets" value="[config.ui.skin]assets.swf|" />
		<Constant name="css" value="[config.ui.skin]css/" />
		<Constant name="localCss" value="[config.mod.path]SpellsTracker/css/" />
		<Constant name="localAssets" value="[config.mod.path]SpellsTracker/assets/assets.swf|" />
	</Constants>

	<Container name="ctn_main">
		<Anchors>
			<Anchor>
				<AbsDimension x="300" y="300" />
			</Anchor>
		</Anchors>
		
		<Texture name="tx_spellIcon">
			<Anchors>
				<Anchor>
					<AbsDimension x="3" y="3" /> 
				</Anchor>
			</Anchors>
			<Size>
				<AbsDimension x="44" y="44" />
			</Size>
		</Texture>
		
		<!-- Nom du sort -->
		<Label name="lbl_spellName">
			<Anchors>
				<Anchor>
					<AbsDimension x="50" y="0" />
				</Anchor>
			</Anchors>
			
			<Size>
				<AbsDimension x="150" y="20" />
			</Size>
			
			<cssClass>spell</cssClass>
			<css>[local.localCss]tooltip.css</css>
		</Label>
		
		<!-- Nom du lanceur -->
		<Label name="lbl_fighter">
			<Anchors>
				<Anchor>
					<AbsDimension x="50" y="20" />
				</Anchor>
			</Anchors>
			
			<Size>
				<AbsDimension x="150" y="20" />
			</Size>
			
			<cssClass>teammate</cssClass>
			<css>[local.localCss]tooltip.css</css>
		</Label>
		
		<!-- Coundown -->
		<Label name="lbl_countdown">
			<Anchors>
				<Anchor>
					<AbsDimension x="200" y="0" />
				</Anchor>
			</Anchors>
			
			<Size>
				<AbsDimension x="50" y="50" />
			</Size>
			
			<cssClass>countdown</cssClass>
			<css>[local.localCss]tooltip.css</css>
		</Label>
		
		<!-- Boutons -->
		<Button name="btn_quit">
			<Common>
				<Anchors>
					<Anchor>
						<AbsDimension x="255" y="0" />
					</Anchor>
				</Anchors>
			
				<Texture name="btn_quit_tx">
					<Size>
						<AbsDimension x="10" y="10" />
					</Size>
			
					<uri>[local.localAssets]btn_close</uri>
				</Texture>
			</Common>
		</Button>
		
		<Button name="btn_expend">			
			<Common>
				<Anchors>
					<Anchor>
						<AbsDimension x="255" y="40" />
					</Anchor>
				</Anchors>
				
				<Texture name="btn_minimize_tx">
					<Size>
						<AbsDimension x="10" y="10" />
					</Size>
					
					<uri>[local.localAssets]btn_expend</uri>
				</Texture>
			</Common>
		</Button>
		
		<!-- Background -->
		<Container name="ctn_background" strata="LOW">
			<Anchors>
				<Anchor relativePoint="TOPLEFT">
					<AbsDimension x="-5" y="-5" />
				</Anchor>
				<Anchor relativePoint="BOTTOMRIGHT">
					<AbsDimension x="5" y="5" />
				</Anchor>
			</Anchors>
			
			<shadowColor>[colors.ui.shadow]</shadowColor>
			<bgCornerRadius>10</bgCornerRadius>
			<bgColor>[colors.tooltip.bg]</bgColor>
			<bgAlpha>[colors.tooltip.bg.alpha]</bgAlpha>
		</Container>
	</Container>
</Definition>