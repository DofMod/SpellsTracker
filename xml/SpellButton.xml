<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Definition SYSTEM "../dtd/ui.dtd">
<Definition usePropertiesCache="false">
	<Constants>
		<Constant name="assets" value="[config.ui.skin]assets.swf|" />
		<Constant name="css" value="[config.ui.skin]css/" />
		<Constant name="weapon" value="[config.content.path]gfx/spells/all.swf|weapon_" />
	</Constants>

	<Container name="ctn_main">
		<Button name="btn_spell">
			<Common>
				<Texture name="btn_spell_tx">
					<Size>
						<AbsDimension x="44" y="44" />
					</Size>
				</Texture>
			</Common>
		</Button>
		
		<Texture name="tx_criticalFailure">
			<Size>
				<AbsDimension x="20" y="20" />
			</Size>
			<uri>[local.assets]Challenge_tx_Perdu</uri>
			<visible>false</visible>
		</Texture>
		
		<Texture name="tx_criticalHit">
			<Size>
				<AbsDimension x="20" y="20" />
			</Size>
			<uri>[local.assets]etoile1</uri>
			<visible>false</visible>
		</Texture>
		
		<Label name="lbl_spellAreaLink">
			<Anchors>
				<Anchor relativePoint="TOPRIGHT" point="TOPRIGHT">
					<AbsDimension x="0" y="-3" />
				</Anchor>
			</Anchors>
			
			<autoResize>false</autoResize>
			<fixedWidth>true</fixedWidth>
			<fixedHeight>true</fixedHeight>
			<width>44</width>
			<height>20</height>
			<css>[local.css]normal.css</css>
			<cssClass>right</cssClass>
			<hyperlinkEnabled>true</hyperlinkEnabled>
		</Label>
	</Container>
</Definition>